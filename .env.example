# Jira credentials (required)
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-api-token

# Global options
JIRA_OUTPUT_DIR=output  # Directory for output Markdown files

# Create Issue options
JIRA_PROJECT=PROJ  # Project key
JIRA_ISSUE_TYPE=Task  # Issue type (Task, Bug, etc.)
JIRA_SUMMARY=Automated issue
JIRA_DESCRIPTION=Created from config

# Update Issue options
JIRA_ISSUE_KEY=PROJ-123  # Issue key to update
JIRA_FIELD=summary  # Field to update
JIRA_VALUE=Updated summary  # New value for the field

# Bulk Operations options
JIRA_JQL=project = PROJ AND status = "To Do"  # JQL query for bulk actions
JIRA_BULK_ACTION=comment  # 'comment' or 'update_field'
JIRA_BULK_COMMENT=Bulk comment text
JIRA_BULK_FIELD=summary
JIRA_BULK_VALUE=Bulk updated summary

# User and Team Analytics options
JIRA_TEAM=user1,user2  # Comma-separated usernames
JIRA_START_DATE=2024-01-01
JIRA_END_DATE=2024-01-31

# Integration Tools options
JIRA_INTEGRATION_JQL=project = PROJ AND status = "Done"

# Time Tracking and Worklogs options
JIRA_USER=user1  # Username for worklogs/metrics

# Automated Documentation options
JIRA_DOC_TYPE=Release notes  # Release notes, Changelog, or Sprint review
JIRA_FIX_VERSION=1.0.0  # For release notes/changelog
JIRA_SPRINT=Sprint 1  # For sprint review
JIRA_CHANGELOG_START=2024-01-01  # For changelog
JIRA_CHANGELOG_END=2024-01-31  # For changelog

# Advanced Metrics, Summarize Tickets, Gather Metrics options
# (also uses JIRA_USER, JIRA_START_DATE, JIRA_END_DATE)
JIRA_ACCEPTANCE_CRITERIA_FIELD=customfield_10001  # Custom field ID for acceptance criteria in summaries

# Other options
# (Uncomment and set as needed)
# JIRA_DRY_RUN=true  # If true, no changes are made to Jira